{
  "name": "use-herald-action",
  "repository": "git@github.com:gagoar/use-herald-action.git",
  "license": "MIT",
  "version": "2.3.0",
  "description": "add subscribers, assignees and reviewers to your pull request",
  "main": "index.ts",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "test": "jest",
    "build": "esbuild --bundle index.ts --platform=node --target=node12 --main-fields=main,module,browser --outdir=dist/",
    "lint": "eslint index.ts",
    "version": "auto-changelog -p --issue-url https://github.com/gagoar/use-herald-action/issue/{id} --merge-url https://github.com/gagoar/use-herald-action/pull/{id} --compare-url https://github.com/gagoar/use-herald-action/compare/{from}...{to} && git add CHANGELOG.md"
  },
  "engines": {
    "node": ">12.0.0"
  },
  "keywords": [
    "herald rules",
    "github",
    "action"
  ],
  "lint-staged": {
    "*": [
      "pretty-quick --staged"
    ],
    "package.json": [
      "bash -c \"npm install\""
    ],
    "*.ts": [
      "bash -c \"npm install\"",
      "eslint --fix",
      "bash -c \"npm run build\"",
      "git add ."
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "printWidth": 120
  },
  "eslintConfig": {
    "ignorePatterns": "dist/*",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    },
    "rules": {
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "no-debugger": "error",
      "no-process-env": "off",
      "import/prefer-default-export": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": true
        }
      ],
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Injectable",
            "Inject"
          ]
        }
      ],
      "prefer-destructuring": [
        "error",
        {
          "VariableDeclarator": {
            "array": false,
            "object": true
          },
          "AssignmentExpression": {
            "array": true,
            "object": false
          }
        },
        {
          "enforceForRenamedProperties": false
        }
      ]
    }
  },
  "author": "Gago <xeroice@gmail.com>",
  "dependencies": {
    "@actions/core": "1.2.6",
    "@octokit/rest": "18.0.12",
    "debug": "4.3.1",
    "envalid": "6.0.2",
    "fast-glob": "3.2.5",
    "jsonpath": "1.0.2",
    "lodash.groupby": "4.6.0",
    "markdown-table": "^2.0.0",
    "minimatch": "3.0.4",
    "p-queue": "6.6.2"
  },
  "devDependencies": {
    "@types/debug": "4.1.5",
    "@types/jest": "26.0.20",
    "@types/jsonpath": "0.2.0",
    "@types/lodash.groupby": "4.6.6",
    "@types/markdown-table": "2.0.0",
    "@types/node": "13.13.39",
    "@typescript-eslint/eslint-plugin": "4.14.0",
    "@typescript-eslint/parser": "4.14.0",
    "ajv-keywords": "4.0.0",
    "auto-changelog": "2.2.1",
    "bufferutil": "4.0.3",
    "esbuild": "0.8.33",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.1.0",
    "husky": "4.3.7",
    "jest": "26.6.3",
    "jest-mock-process": "1.4.0",
    "lint-staged": "10.5.3",
    "nock": "13.0.5",
    "prettier": "2.2.1",
    "prettier-eslint": "12.0.0",
    "prettier-eslint-cli": "5.0.0",
    "pretty-quick": "3.1.0",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "tslib": "2.1.0",
    "typescript": "4.1.3",
    "utf-8-validate": "5.0.4"
  }
}
